const cartasArray = [
    { name: 'manzana', img: 'https://via.placeholder.com/100?text=Apple' },
    { name: 'platano', img: 'https://via.placeholder.com/100?text=Banana' },
    { name: 'cereza', img: 'https://via.placeholder.com/100?text=Cherry' },
    { name: 'uva', img: 'https://via.placeholder.com/100?text=Grape' },
    { name: 'limon', img: 'https://via.placeholder.com/100?text=Lemon' },
    { name: 'naranja', img: 'https://via.placeholder.com/100?text=Orange' },
    { name: 'pera', img: 'https://via.placeholder.com/100?text=Pear' },
    { name: 'fresa', img: 'https://via.placeholder.com/100?text=Strawberry' }
];

// Duplicar el array para obtener parejas
let tableroJuego = [...cartasArray, ...cartasArray];

// Barajar el tablero
tableroJuego.sort(() => 0.5 - Math.random());

// Crear el tablero de juego
const contenedorJuego = document.getElementById('tablero-juego');

// Variables para hacer seguimiento del estado del juego
let primeraCarta = null;
let segundaCarta = null;
let bloqueoTablero = false;

tableroJuego.forEach(item => {
    // Crear los elementos de las cartas
    const carta = document.createElement('div');
    carta.classList.add('carta');
    carta.dataset.name = item.name;

    // Añadir la imagen dentro de la carta
    const caraFrontal = document.createElement('img');
    caraFrontal.src = item.img;
    carta.appendChild(caraFrontal);

    // Añadir evento de clic a cada carta
    carta.addEventListener('click', voltearCarta);

    contenedorJuego.appendChild(carta);
});

function voltearCarta() {
    if (bloqueoTablero) return;
    if (this === primeraCarta) return; // Evitar hacer clic dos veces en la misma carta

    this.classList.add('volteada');

    if (!primeraCarta) {
        primeraCarta = this;
    } else {
        segundaCarta = this;
        verificarCoincidencia();
    }
}

function verificarCoincidencia() {
    let esCoincidencia = primeraCarta.dataset.name === segundaCarta.dataset.name;

    if (esCoincidencia) {
        desactivarCartas();
    } else {
        desvoltearCartas();
    }
}

function desactivarCartas() {
    primeraCarta.removeEventListener('click', voltearCarta);
    segundaCarta.removeEventListener('click', voltearCarta);
    reiniciarTablero();
}

function desvoltearCartas() {
    bloqueoTablero = true;
    setTimeout(() => {
        primeraCarta.classList.remove('volteada');
        segundaCarta.classList.remove('volteada');
        reiniciarTablero();
    }, 1000);
}

function reiniciarTablero() {
    [primeraCarta, segundaCarta, bloqueoTablero] = [null, null, false];
}
